<div class="seccion">
  <% if not notice.nil? %><p id="notice"><%= notice %></p><% end %>

  <table><tr><td class="marco">
    <%= form_for(:session, :url => sessions_path) do |f| %>
      <div class="field">
        <%= f.label :user, "Usuario:" %><br />
        <%= f.text_field :user %>
      </div>
      <div class="field">
        <%= f.label :password  %>:<br />
        <%= f.password_field :password  %>
      </div>
      <div class="botones">
        <%= f.submit "Ingresar" %>
      </div>
    <% end %>
  </td></tr></table>
</div>

