  <tr>
    <th>Id</th>
    <th>Nombre</th>
    <th>Descripci&oacute;n</th>
    <th>Estado</th>
    <th></th>
  </tr>

  <% @products.each do |product| %>
  <tr>
    <td><%= product.id %></td>
