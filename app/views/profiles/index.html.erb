<div class="seccion">
  <table class="index">
  <tr>
    <th>Id</th>
    <th>Nombre</th>
    <th>Descripci&oacute;n</th>
    <th>Estado</th>
    <th></th>
  </tr>
  <% @profiles.each do |profile| %>
  <tr>
    <td><%= profile.id %></td>
    <td><%= profile.name %></td>
    <td><%= profile.description %></td>
    <td><% if profile.state %>Activo<% else %>Inactivo<% end %></td>
    <td><%= link_to 'Ver', profile %></td>
  </tr>
  <% end %>
  </table>
</div>

<div class="botones">
  <% if current_user.profile_id==8 %> 
    <%= link_to 'Crear Perfil', new_profile_path %>
  <% end %>
  <%= render 'shared/pp_adm_dsg' %>
</div>

