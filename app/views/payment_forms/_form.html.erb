   <div id="error">
      <h2>Error: No es posible crear la Forma de Pago.<br>Corregir lo siguiente:</h2>
      <ul>
      <% @payment_form.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
   </div>
  <% end %>

  <div class="field">
   Nombre:<br>
   <%= f.text_field :name, :size => "40" %>
  </div>
  <div class="field">
   Descripci√≥n: <br>
   <%= f.text_area :description, :size => "40x2" %>
  </div>
  <div class="field">
