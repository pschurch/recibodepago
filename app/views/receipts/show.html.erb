<div class="seccion">
<table><tr><td class="formulario">
<% if notice == '1' %>
  <p id="notice">El Recibo de Pago N° <%= @receipt.id %> se ha cerrado exitosamente y se encuentra listo para ser rendido.</p>
<% else %>
  <% if not notice.nil? %><p id="notice"><%= notice %></p><% end %>

ID: <%= @var %>

  <% @tickets.each do |a| %>
  <table class="display">
  <tr>
    <td>Ticket N°:</td><td><div class="sh"><%= a.id %></div></td>
    <td rowspan=3 width=16></td>
    <td>Rut:</td><td><div class="sh"><%= a.rut %> - <%= a.digit %></div></td>
  </tr>
  <tr>
    <td>Identificador:</td><td><div class="sh"><%= a.cas_id %> </div></td>
    <td>Nombre:</td><td><div class="n"><%= a.name %></div></td>
  </tr>
  <tr>
    <td>Tipo de Cobranza:</td><td><div class="sh"><%= a.collection_type_id %></div></td>
    <td>Mandante:</td><td><div><%= a.principal_id %></div></td>
  </tr>
  <tr>
    <td>Descripción del Pago:</td><td colspan="4"><div class="lg"><%= a.payment_description %>&nbsp;</div></td>
  </tr>
  <tr>
    <td>Capital:</td><td><div class="sh"><%= number_to_currency(a.capital, :precision => 0, :delimiter => ".") %></div></td>
    <td rowspan=7 width=16></td>
    <td>Producto:</td><td><div><%= a.product_name %></div></td>
  </tr>
  <tr>
    <td>Interés Mora:</td><td><div class="sh"><%= number_to_currency(a.arrear_interest, :precision => 0, :delimiter => ".") %>&nbsp;</div></td>
    <td>Número:</td><td><div><%= a.number %>&nbsp;</div></td>
  </tr>
  <tr>
    <td>Interés Plazo:</td><td><div class="sh"><%= number_to_currency(a.term_interest, :precision => 0, :delimiter => ".") %>&nbsp;</div></td>
    <td>Emisor:</td><td><div class="n"><%= a.emitter %>&nbsp;</div></td>
  </tr>
  <tr>
    <td>Honorarios:</td><td><div class="sh"><%= number_to_currency(a.fee, :precision => 0, :delimiter => ".") %>&nbsp;</div></td>
    <td>Cuenta Corriente:</td><td><div class="n"><%= a.ctacte %>&nbsp;</div></td>
  </tr>
  <tr>
    <td>Gastos Envío:</td><td><div class="sh"><%= number_to_currency(a.shipping_costs, :precision => 0, :delimiter => ".") %>&nbsp;</div></td>
    <td>Vencimiento:</td><td><div><%= a.expir_date.strftime("%d-%b-%Y") %>&nbsp;</div></td>
  </tr>
  <tr>
    <td>Gastos Judiciales:</td><td><div class="sh"><%= number_to_currency(a.legal_costs, :precision => 0, :delimiter => ".") %>&nbsp;</div></td>
    <td>Boleta N°: </td><td><div class="n"><%= a.ballot %>&nbsp;</div></td>
  </tr>
  <tr>
    <td>Total a Pagar:</td><td><div class="sh"><%= number_to_currency(a.total_pay, :precision => 0, :delimiter => ".") %>&nbsp;</div></td>
    <td>Cuota:</td><td><div class="sh"><%= a.quota_num %>
    <% if not a.total_q.empty? %> de <%= a.total_q %><% end %>&nbsp;</div></td>
  </tr>

  <% if not a.adjust.nil? %> <!-- Ajuste -->
    <tr>
      <td>Ajuste:</td><td><div class="sh"><%= number_to_currency(a.adjust, :precision => 0, :delimiter => ".") %></div></td>
      <th rowspan=3 width=16></th>
      <td rowspan="2">Observación ajuste:</td><td rowspan="2"><div class="w"><%= a.adjust_obs %></div></td>
    </tr>
    <tr>
      <td>Nuevo Total a Pagar:</td><td><div class="sh"><%= number_to_currency(a.new_total_pay, :precision => 0, :delimiter => ".") %></div></td>
    </tr>
  <% end %>

  <tr>
    <td>Preparado por:</td><td colspan=4><div class="n"><%= a.prepared_by%></div></td>
  </tr>
  <tr>
    <td colspan=3>Entrega documento a deudor:</td><td><div class="sn"><% if a.doc_delivery %>Sí<% else %>No<% end %></div></td>
  </tr>
  </table>
  <hr>
  <% end %>

  <table class="display">
  <tr>
    <td>Fecha:</td><td><div class="sh"><%= @receipt.date_r.strftime("%d-%b-%Y") %></div></td>
    <th rowspan=20 width=30></th>
    <td>Total a Pagar: &nbsp;</td><td><div class="sh"><%= number_to_currency(@receipt.total_pay, :precision => 0, :delimiter => ".") %></div></td>
  </tr>
  <tr>
    <td>Acuerdo de Pago: &nbsp;</td><td><div><%= @receipt.payment_agreement_id %></div></td>
  </tr>
  <tr>
    <td>Preparado por:</td><td><div class="n"><%= @receipt.user_name %></div></td>
    <td>Teléfono: </td><td><div class="sh"><%= @receipt.telephone_user %>&nbsp;</div></td>
  </tr>
  </table>
  <div class="subtit">
    Datos de Contacto:
  </div>
  <table class="display">
  <tr>
    <td>Nombre: </td><td><div class="sl"><%= @receipt.cont_name %>&nbsp;</div></td>
    <th rowspan=20 width=25></th>
    <td>Rut:</td><td><div class="sh"><%= @receipt.cont_rut %>&nbsp;</div></td>
  </tr>
  <tr>
    <td>Calle:</td><td><div class="sl"><%= @receipt.cont_calle %>&nbsp;</div></td>
    <td>N° </td><td><div class="sh"><%= @receipt.cont_num %>&nbsp;</div></td>
  </tr>
  <tr>
    <td>Comuna: </td><td><div class="sl"><%= @receipt.comuna_id %>&nbsp;</div></td>
    <td>N° Depto.:</td><td><div class="sh"><%= @receipt.cont_depto %>&nbsp;</div></td>
  </tr>
  <tr>
    <td>Referencias:</td><td colspan=4><div class="lg"><%= @receipt.cont_ref %>&nbsp;</div></td>
  </tr>
  <tr>
    <td>Horario: </td><td><div class="sl"><%= @receipt.cont_hr %>&nbsp;</div></td>
    <td>Teléfono 1: </td><td><div class="sh"><%= @receipt.cont_telf1 %>&nbsp;</div></td>
  </tr>
  <tr>
    <td>Teléfono 2: </td><td><div class="sh"><%= @receipt.cont_telf2 %>&nbsp;</div></td>
    <td>Teléfono 3: </td><td><div class="sh"><%= @receipt.cont_telf3 %>&nbsp;</div></td>
  </tr>
  </table>

  <div class="subtit">
    Detalle del Pago:
  </div>
    <table class="display">
    <tr>
      <th>Forma de Pago</th>
      <th>Emisor</th>
      <th>N° Documento</th>
      <th>Monto</th>
    </tr>
    <tr>
      <td><div class="sh"><%= @receipt.formapago1 %>&nbsp;</div></td>
      <td><div class="n"><%= @receipt.emisor1 %>&nbsp;</div></td>
      <td><div class="sh"><%= @receipt.docnum1 %>&nbsp;</div></td>
      <td><div class="sh"><%= @receipt.monto1 %>&nbsp;</div></td>
    </tr>
    <tr>
      <td><div><%= @receipt.formapago2 %>&nbsp;</div></td>
      <td><div><%= @receipt.emisor2 %>&nbsp;</div></td>
      <td><div class="sh"><%= @receipt.docnum2 %>&nbsp;</div></td>
      <td><div class="sh"><%= @receipt.monto2 %>&nbsp;</div></td>
    </tr>
    <tr>
      <td><div><%= @receipt.formapago3 %>&nbsp;</div></td>
      <td><div><%= @receipt.emisor3 %>&nbsp;</div></td>
      <td><div class="sh"><%= @receipt.docnum3 %>&nbsp;</div></td>
      <td><div class="sh"><%= @receipt.monto3 %>&nbsp;</div></td>
    </tr>
    <tr>
      <td><div><%= @receipt.formapago4 %>&nbsp;</div></td>
      <td><div><%= @receipt.emisor4 %>&nbsp;</div></td>
      <td><div class="sh"><%= @receipt.docnum4 %>&nbsp;</div></td>
      <td><div class="sh"><%= @receipt.monto4 %>&nbsp;</div></td>
    </tr>
    <tr>
      <td><div><%= @receipt.formapago5 %>&nbsp;</div></td>
      <td><div><%= @receipt.emisor5 %>&nbsp;</div></td>
      <td><div class="sh"><%= @receipt.docnum5 %>&nbsp;</div></td>
      <td><div class="sh"><%= @receipt.monto5 %>&nbsp;</div></td>
    </tr>
    <tr>
      <td><div><%= @receipt.formapago6 %>&nbsp;</div></td>
      <td><div><%= @receipt.emisor6 %>&nbsp;</div></td>
      <td><div class="sh"><%= @receipt.docnum6 %>&nbsp;</div></td>
      <td><div class="sh"><%= @receipt.monto6 %>&nbsp;</div></td>
    </tr>
    <tr>
      <td colspan=2></td>
      <th>Total Pagado:</th>
      <td><div class="sh"><%= @receipt.total_paid %>&nbsp;</div></td>
    </tr>
    </table>

<% end %>
</td></tr></table>
</div>

<div class="botones">
<% if not notice == '1' %>
  <%= link_to 'Editar', edit_receipt_path(@receipt) %> 
<% end %>
  <%= link_to 'Página Principal', :controller => "sessions", :action => "ejc" %>
</div>

  <% if Rails.env.development? %>
    <p><hr></p>
    <div>
      state: <%= @receipt.state %><br>
      payment_agreement_id:  <%= @receipt.payment_agreement_id %><br>
      user_id:   <%= @receipt.user_id %><br>
    </div>
    <p><hr></p>
  <% end %>


