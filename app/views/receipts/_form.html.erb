      <td colspan=3>Total Pagado:</td>
      <td><%= f.text_field :total_paid, :size => "10" %></td>
    </tr>
    </table>

  <div class="actions">
    <%= f.submit "Grabar" %>
  </div>

  <p><hr></p>
    state: <%= f.text_field :state, :size => "10", :readonly => true %><br>
    payment_agreement_id: <%= f.text_field :payment_agreement_id, :size => "10" , :readonly => true %><br>
    user_id:  <%= f.text_field :user_id, :size => "10" , :readonly => true %><br>
    contact_id: <%= f.text_field :contact_id, :size => "10", :readonly => true %><br>
  </div>

<% end %>
</td></tr></table>

