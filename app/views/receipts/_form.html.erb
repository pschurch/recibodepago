<table><tr><td class="formulario">
<%= form_for(@receipt) do |f| %>
  <%= render "shared/error_messages", :target => @receipt, :text => "el Recibo de Pago" %>

  <% @tickets.each do |a| %>
    <div class="field-l"><b>Ticket N°: <%= a.id %></b></div>
    <div class="field-r">Identificador: <%= a.cas_id %></div>
    <br clear="all">

    <div class="field-l">Nombre: <%= a.name %></div>
    <div class="field-r">Rut: <%= a.rut %> - <%= a.digit %></div>
    <br clear="all">

    <div class="field-l">Mandante: <%= a.principal_name %></div>
    <div class="field-r">Tipo de Cobranza: <%= a.collection_type_name %></div>
    <br clear="all">

    <div class="field-l">Descripción del Pago: <%= a.payment_description %></div>
    <br clear="all">

    <div class="field-l">Capital:  <%= a.capital %></div>
    <div class="field-r">Producto: <%= a.product_name %></div>
    <br clear="all">

    <div class="field-l">Interés Mora:  <%= a.arrear_interest %></div>
    <div class="field-r">Número:  <%= a.number %></div>
    <br clear="all">

    <div class="field-l">Interés Plazo: <%= a.term_interest %></div>
    <div class="field-r">Emisor: <%= a.emitter %>
    </div>
    <br clear="all">
    <div class="field-l">Honorarios: <%= a.fee %></div>
    <div class="field-r">Cuenta Corriente: <%= a.ctacte %>
    </div>
    <br clear="all">
    <div class="field-l">Gastos Envío: <%= a.shipping_costs %></div>
    <div class="field-r">Vencimiento: <%= a.expir_date %>
    </div>
    <br clear="all">
    <div class="field-l">Gastos Judiciales: <%= a.legal_costs %></div>
    <div class="field-r">Boleta nro: <%= a.ballot %></div>
    <br clear="all">

    <div class="field-l">Total a Pagar: <%= a.total_pay %></div>
    <div class="field-r">Cuota: <%= a.quota_num %> de: <%= a.total_q %></div>
    <br clear="all">

    <div class="field-l">Preparado por: <%= a.prepared_by %></div>
    <br clear="all">

    <div class="field">Entrega documento a deudor: <% if a.doc_delivery %>Sí<% else %>No<% end %></div>
    <br clear="all">

    <hr>
  <% end %>

    <div class="fieldt-l">
      Total a Pagar: <%= f.text_field :total_pay, :size => "10", :readonly => true %>
    </div>
    <br clear="all">
    <div class="field-l">
      Fecha: <%= f.date_select :date_r %>
    </div>
    <div class="field-r">
      Acuerdo de Pago: <%= f.text_field :payment_agreement_name, :size => "10" %>
    </div>
    <br clear="all">
    <div class="field-l">
      Preparado por: <%= f.text_field :user_name, :size => "30", :value => current_user.name, :readonly => true %>&nbsp;
    </div>
    <div class="field-r">
      Teléfono: <%= f.text_field :telephone_user, :size => "10" , :value => current_user.telephone, :readonly => true %>
    </div>
    <br clear="all">

    <div class="subtit">
      Datos de Contacto:
    </div>
    <div class="field-l">
      Nombre: 
    </div>
    <div class="field-r">
      Rut: 
