<div class="seccion">

<% if not @msg.nil? %>
<table><tr><td class="formulario">
  <p id="notice"><%= @msg %></p>
</td></tr></table>  
<p>&nbsp;</p>
<% end %>

<% form_tag new2_receipts_path do %>
  <table>
  <tr>
    <th><%= sortable "id", "NÂ° Ticket" %></th>
    <th><%= sortable "rut" %></th>
    <th><%= sortable "name", "Nombre Deudor" %></th>
    <th><%= sortable "principal_id", "Mandante" %></th>
    <th><%= sortable "product_id", "Producto" %></th>
    <th><%= sortable "cas_id", "Identificador" %></th>
    <th><%= sortable "capital" %></th>
    <th><%= sortable "prepared_by", "Preparado por" %></th>
    <th>Selecc</th>
    <th colspan=2></th>
  </tr>
  <% if @tickets.empty? %> 
    <tr><td colspan=11>No se han encontrado Tickets para crear Recibos de Pago.</td></tr>
  <% else %>
   <% @tickets.each do |ticket| %>
   <tr>
    <td><%= ticket.id %></td>
    <td><%= ticket.rut %>-<%= ticket.digit %></td>
    <td><%= ticket.name %></td>
    <td><%= ticket.principal.name %></td>
    <td><%= ticket.product.name %></td>
    <td><%= ticket.cas_id %></td>
    <td><%= number_to_currency(ticket.capital, :precision => 0, :delimiter => ".") %></td>
    <td><%= ticket.prepared_by %></td>
    <td><%= check_box_tag "ticket_ids[]", ticket.id %></td>
    <td><%= link_to 'Ver', ticket %></td>
    <td><%= link_to 'Editar', edit_ticket_path(ticket) %></td>
   </tr>
   <% end %>
  <% end %>
  </table>
  <div class="actions">
    <%= submit_tag "Crear Recibo de Pago" %>
  </div>
<% end %>
</div>

<div class="botones">
  <%= render 'shared/pp_ejc_dsg' %>
</div>
