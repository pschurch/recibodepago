<div class="seccion">
  <% if not notice.nil? %><p id="notice"><%= notice %></p><% end %>
  <table><tr><td class="marco">
  <div class="field">
    Nombre:
  </div>
  <div class="field_txt">
    <%= @principal.name %>
  </div>
  <div class="field">
  Razón Social:
  </div>
  <div class="field_txt">
  <%= @principal.social_reason %>
  </div>
  <div class="field">
  Rut:
  </div>
  <div class="field_txt">
  <%= @principal.rut %> - <%= @principal.digit %>
  </div>
  <div class="field">
  Contacto:
  </div>
  <div class="field_txt">
  <%= @principal.contact %>
  </div>
  <div class="field">
  Teléfono:
  </div>
  <div class="field_txt">
  <%= @principal.telephone %>
  </div>
  <div class="field">
  Email:
  </div>
  <div class="field_txt">
  <%= @principal.email %>
  </div>
  <div class="field">
  Productos:
  </div>
  <div class="field_txt">
    <% @principal.product_ids.each do |p| %>
      <% @product_list.each do |f| %>
        <% if p == f.id %><%= f.name %><br><% end %>
      <% end %>
    <% end %>
  </div>
  <div class="field">
    Estado:
  </div>
  <div class="field_txt">
    <% if @principal.state %>Activo<% else %>Inactivo<% end %>
  </div>
</td></tr></table>
</div>

<div class="botones">
<%= link_to 'Editar', edit_principal_path(@principal) %> 
<% if current_user.profile_id==7 %>
  <%= link_to 'Listado de Mandantes', principals_path %>
  <%= render 'shared/pp_adm_dsg' %>
<% elsif current_user.profile_id==8 %>
  <%= link_to "Listado de Mandantes", dprincipals_path %>
  <%= link_to 'Página Principal', :controller => "sessions", :action => "dsg" %>
<% end %>
</div>


