<div class="seccion">
<table><tr><td class="formulario">
  <% if not notice.nil? %><p id="notice"><%= notice %></p><% end %>
  <div class="field">
    Nombre:
  </div>
  <div class="field_txt">
    <%= @collection_type.name %>
  </div>

  <div class="field">
    Descripción:
  </div>
  <div class="field_txt">
    <%= @collection_type.description %>
  </div>

  <div class="field">
    Estado:
  </div>
  <div class="field_txt">
    <% if @collection_type.state %>Activo<% else %>Inactivo<% end %>
  </div>

</td></tr></table>
</div>

<div class="botones">
<% if current_user.profile_id==7 %>
  <%= link_to 'Editar', edit_collection_type_path(@collection_type) %> 
  <%= link_to 'Listado de Tipos de Cobranza', collection_types_path %>
  <%= render 'shared/pp_adm_dsg' %>
<% elsif current_user.profile_id==8 %>
  <%= link_to "Listado de Todos los Tipos de Cobranza", dcollection_types_path %>
  <%= link_to 'Página Principal', :controller => "sessions", :action => "dsg" %>
<% end %>

</div>

