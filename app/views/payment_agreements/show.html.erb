<div class="seccion">
<% if not notice.nil? %><p id="notice"><%= notice %></p><% end %>
<table><tr><td class="marco">
  <div class="field">
    Nombre:
  </div>
  <div class="field_txt">
    <%= @payment_agreement.name %>
  </div>
  <div class="field">
    Descripción:
  </div>
  <div class="field_txt">
    <%= @payment_agreement.description %>&nbsp;
  </div>
  <div class="field">
    Flujo de Pago:
  </div>
  <div class="field_txt">
    <%= @payment_agreement.payment_flow.name %>&nbsp;
  </div>
  <div class="field">
    Estado:
  </div>
  <div class="field_txt">
    <% if @payment_agreement.state %>Activo<% else %>Inactivo<% end %>
  </div>
</td></tr></table>
</div>

<div class="botones">
  <%= link_to 'Editar', edit_payment_agreement_path(@payment_agreement) %> 
<% if current_user.profile_id==7 %>  <!--  Administrador --> 
  <%= link_to 'Listado de Acuerdos de Pago', payment_agreements_path %>
  <%= render 'shared/pp_adm_dsg' %>
<% elsif current_user.profile_id==8 %> <!-- Designer -->
  <%= link_to "Listado de Acuerdos de Pago", dpayment_agreements_path %>
  <%= link_to 'Página Principal', :controller => "sessions", :action => "dsg" %>
<% end %>
</div>
